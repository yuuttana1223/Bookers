<%= form_with model: @book, local: true do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <% if action_name == "index" || action_name == "create" %>
      <%= f.submit "Create Book" %>
    <% else %>
      <%= f.submit "Update Book" %>
    <% end %>
  </div>
<% end %>